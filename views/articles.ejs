<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articles</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/style1.css">
    <link href="https://fonts.googleapis.com/css?family=Manrope:200,300,regular,500,600,700,800" rel="stylesheet" />
    <style>
        .card-img-top {
            width: 100%;
            height: 15vw;
            object-fit: cover;
        }
    </style>
</head>
<body>
    <div class="container px-4 mt-4">
        <h1>All Article</h1>
        <form action="/<%= role %>/article/<%= userId %>">
            <input type="text" name="search" placeholder="Search..">
            <input type="submit" value="search">
            <a class="btn btn-primary mt-4 mb-4" href="/<%= role %>/article/<%= userId %>" role="button">Clear search</a>
        </form>
        <a href="/<%= role %>/add/article/<%= userId %>">Add</a>
        <a href="/<%= role %>/article/<%= userId %>/myArticle">My Article</a>


        <% result.forEach(el => { %>
            <% const {id, UserId, title, content, imgUrl, pendingStatus, Tag, createdAt, User, formatPendingStatus, dateFormat} = el%> 
            <% const postId = id %>
            <tr>
                <td><a href="/<%= role %>/article/<%= userId %>/<%= postId %>"><%= title %></a></td>
                <td><%= customFilter.clean(content) %></td>
                <td>
                    <img src="<%= imgUrl %>" alt="img">
                </td>
                <% if (role === 'Admin') { %>
                    <td><%= formatPendingStatus %></td>
                <% } %>
                <td><%= User.userName %></td>
                <td><%= Tag.name %></td>
                <td><%= dateFormat %></td>
            </tr>
        <% }) %>

        
        <table border="1">
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>ImgUrl</th>
                <% if (role == "Admin") { %>
                    <th>Status</th>
                <% } %>
                <th>Created By</th>
                <th>Category</th>
                <th>Created At</th>
            </tr>
            
            <% result.forEach(el => { %>
                <% const {id, UserId, title, content, imgUrl, pendingStatus, Tag, createdAt, User, formatPendingStatus, dateFormat} = el%> 
                <% const postId = id %>
                <tr>
                    <td><a href="/<%= role %>/article/<%= userId %>/<%= postId %>"><%= title %></a></td>
                    <td><%= content %></td>
                    <td>
                        <img src="<%= imgUrl %>" alt="img">
                    </td>
                    <% if (role == "Admin") { %>
                        <td><%= formatPending %></td>
                    <% } %>
                    <td><%= User.fullName %></td>
                    <td><%= Tag.name %></td>
                    <td><%= dateFormat %></td>
                </tr>
            <% }) %>
        </table>
    </div>

    
   

</body>
</html>