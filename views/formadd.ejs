<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Add</title>
</head>
<body>
    <h1>Add Article</h1>

    <form action="/<%= role %>/add/article/<%= id %>" method="post">
        <label for="">Title</label>
        <input type="text" name="title">
        <br>

        <label for="">Content</label>
        <br>
        <textarea name="content" id="" cols="30" rows="10"></textarea>
        <br>

        <label for="">Img Url</label>
        <input type="text" name="imgUrl">
        <br>
        
        <label for="">Status User</label>
        <select name="UserId" id="">
            <% if (role == 1) { %>
                <option value="<%= role %>" selected disabled>User</option>
            <% } else { %>
                <option value="<%= role %>" selected disabled>Admin</option>
            <% } %>

        </select>

        <label for="">Tag</label>
        <select name="TagId" id="">
            <% result.forEach(el => { %>
                <option value="<%= el.id %>"><%= el.name %></option>
            <% }) %>
        </select>
        <br>


        <button type="submit">Submit</button>
    </form>
    
</body>
</html>